<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="55dp">
    <android.support.constraint.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/layoutHeader"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/left_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/left_icon"
            app:layout_constraintEnd_toStartOf="@+id/right_icon"
            android:textSize="17sp"
            android:gravity="center"
            />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/right_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/cancel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:text="Cancel"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_height="0dp" />
        <EditText
            android:text="3242334234234324343423323e3e"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:id="@+id/edit_search"
            android:lines="1"
            android:inputType="text"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/search_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cancel"
            />
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toStartOf="@+id/edit_search"
            app:layout_constraintTop_toTopOf="@+id/edit_search"
            app:layout_constraintBottom_toBottomOf="@+id/edit_search"
            app:srcCompat="@drawable/ic_search"
            />
        <android.support.v7.widget.AppCompatImageView
            android:padding="10dp"
            app:srcCompat="@drawable/ic_clear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@+id/edit_search"
            app:layout_constraintTop_toTopOf="@+id/edit_search"
            app:layout_constraintBottom_toBottomOf="@+id/edit_search"
            />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>